{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    {
      "src": "/(.*)\\.(js|css|png|jpg|jpeg|svg|ico|txt|json|webp|woff2?)",
      "dest": "/$1.$2"
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
